{% extends 'base-log.html.twig' %}

{% block title %}Register{% endblock %}

{% block header %}
{% include 'header/header.html.twig' %}
{% endblock %}

{% block body %}
<div class="flex justify-center mb-5">
  <div class="p-3 rounded-lg w-[15%] {% if app.request.attributes.get('_route') == 'register' %}bg-white text-black{% else %}bg-glaucous{% endif %}">
    <a href="{{ path('app_register') }}" class="text-xl font-bold text-white">Register</a>
  </div>
  <div class="p-3 rounded-lg w-[15%] {% if app.request.attributes.get('_route') == 'login' %}bg-glaucous{% else %}bg-white text-black{% endif %}">
    <a href="{{ path('app_login') }}" class="text-xl font-bold">Login</a>
  </div>
</div>

<div>
  <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
  
  {{ form_errors(registrationForm) }}

  {{ form_start(registrationForm) }}
  
    <div class="mb-3">
      {{ form_label(registrationForm.email, 'Email') }}
      {{ form_widget(registrationForm.email, { 'attr': { 'class': 'bg-gray-400 p-3 rounded-lg w-full' } }) }}
    </div>
    
    <div class="mb-3">
      {{ form_label(registrationForm.plainPassword, 'Password') }}
      {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'bg-gray-400 p-3 rounded-lg w-full' } }) }}
    </div>
    
    <div class="mb-3 flex items-center">
      {{ form_widget(registrationForm.agreeTerms) }}
      <label for="agreeTerms" class="text-sm">I accept the <a href="#">Terms and Conditions</a></label>
    </div>

    <div class="flex justify-center">
      <button class="bg-glaucous p-3 rounded-lg w-[70%]" type="submit">Register</button>
    </div>
  
  {{ form_end(registrationForm) }}
</div>
{% endblock %}